{% extends 'LernparadiesLernparadiesBundle::Default/index.html.twig' %}

{% block body -%}
    <h1>Vokabel list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Wort1</th>
                <th>Wort2</th>
                <th>Wort1Sprache</th>
                <th>Wort2Sprache</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vokabel_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
	            <td>{{ entity.wort1.wortName }}</td>
	            <td>{{ entity.wort2.wortName }}</td>
	            <td>{{ entity.wort1sprache.spracheName }}</td>
	            <td>{{ entity.wort2sprache.spracheName }}</td>
                <td>
	                <ul>
	                    <li>
	                        <a href="{{ path('vokabel_show', { 'id': entity.id }) }}">show</a>
	                    </li>
	                    <li>
	                        <a href="{{ path('vokabel_edit', { 'id': entity.id }) }}">edit</a>
	                    </li>
	                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vokabel_new', { 'lang1': "engl", 'lang2': "germ" }) }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
