{% extends 'LernparadiesLernparadiesBundle::Default/index.html.twig' %}

{% block body -%}
    <h1>Vokabel</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
	        <tr>
		        <th>Wort1</th>
		        <td>
			        {{ entity.wort1.wortName }}
		        </td>
	        </tr>
		        <th>Wort2</th>
		        <td>
			        {{ entity.wort2.wortName }}
		        </td>
	        </tr>
	        </tr>
		        <th>Wort1Sprache</th>
		        <td>
			        {{ entity.wort1sprache.spracheName }}
		        </td>
	        </tr>
	        </tr>
		        <th>Wort2Sprache</th>
		        <td>
			        {{ entity.wort2sprache.spracheName }}
		        </td>
	        </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('vokabel') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('vokabel_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
