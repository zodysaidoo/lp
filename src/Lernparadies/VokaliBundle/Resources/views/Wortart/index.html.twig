{% extends 'LernparadiesLernparadiesBundle::Default/index.html.twig' %}

{% block body -%}
    <h1>Wortart list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Wortartnewdate</th>
                <th>Wortarteditdate</th>
                <th>Wortartname</th>
                <th>Wortartkommentar</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('wortart_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.wortartNewdate %}{{ entity.wortartNewdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.wortartEditdate %}{{ entity.wortartEditdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.wortartName }}</td>
                <td>{{ entity.wortartKommentar }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('wortart_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('wortart_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('wortart_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
