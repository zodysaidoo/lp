<!DOCTYPE html>
<html lang="{% if locale is defined %}{{ locale }}{% endif %}" class="no-js">
    <head>
        <meta charset="UTF-8" />
        {% block html_head %}
            <title>{% block title %}Welcome!{% endblock %}</title>
			{% block html_meta %}{% endblock %}
			<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<meta name="title" content="{% block meta_title %} {% endblock %}">
			<meta name="description" content="{% block meta_description %} {% endblock %}">
        {% endblock %}
	    {% include '__base_css.html.twig' %}
	    {% include '__base_js.html.twig' %}
    </head>
    <body>
    <div class="container">
		    <nav>
			    <ul class="nav nav-pills">
				    {% block navigation_top %}
					    {% include '__base_navigation.html.twig' %}
				    {% endblock %}
			    </ul>
		    </nav>
	        {% block body %}
	        {% endblock %}
        </div>
    {% block javascripts %}
    {% endblock %}
    </body>
</html>